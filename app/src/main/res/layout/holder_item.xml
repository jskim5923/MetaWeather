<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="weather"
            type="com.jskim.idus.idus_codingtest.model.Weather" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_local"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            style="@style/breakStrategy"
            android:background="@drawable/border_item_left"
            android:gravity="center"
            android:text="@{weather.title}" />


        <include
            layout="@layout/view_weather"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            app:humidity="@{weather.consolidated_weather[0].humidity}"
            app:icon="@{weather.consolidated_weather[0].weather_state_abbr}"
            app:name="@{weather.consolidated_weather[0].weather_state_name}"
            app:temperature="@{weather.consolidated_weather[0].the_temp}" />

        <include
            layout="@layout/view_weather"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            app:humidity="@{weather.consolidated_weather[1].humidity}"
            app:icon="@{weather.consolidated_weather[1].weather_state_abbr}"
            app:name="@{weather.consolidated_weather[1].weather_state_name}"
            app:temperature="@{weather.consolidated_weather[1].the_temp}" />


    </LinearLayout>
</layout>